@using Microsoft.AspNet.Identity
@model IEnumerable<ChallengeAPI.Models.Module>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.macAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateAssigned)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if(item.Student.studentID == User.Identity.GetUserName())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.macAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateAssigned)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.macAddress }) |
                    @Html.ActionLink("Details", "Details", new { id = item.macAddress }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.macAddress })
                </td>
            </tr>
         }
     }

</table>
